<!-- Section: Design Block -->
<section class="text-center">

    <div class="row">

        <div class="card row col-md-6 mx-auto mt-3 round-lg" style="
        
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
            <div class="card-body py-5 px-md-5 ">

                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <h2 class="fw-bold mb-5">Update user details</h2>

                        {{#each userdata}}
                        <form action="/updateUserData" method="post" id="myform">


                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="form3Example1">First name</label>
                                        <input type="text" id="form3Example1" class="form-control" name="fname" value="{{this.fname}}"  />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label class="form-label" for="form3Example2">Last name</label>
                                        <input type="text" id="form3Example2" class="form-control" name="lname" value="{{this.lname}}" />
                                    </div>
                                </div>
                            </div>

                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <label class="form-label" for="form3Example3">Email address</label>
                                <input type="email" id="form3Example3" class="form-control" name="mailid" value="{{this.mailid}}" />
                            </div>
                            
                                <input type="text" id="id" class="form-control invisible" name="_id" value="{{this._id}}"/>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-success btn-block mb-4">
                                Submit
                            </button>

                        </form>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section: Design Block -->


<script>


    $(document).ready(function () {
        $("#myform").validate({
            rules: {
                fname: {
                    required: true,
                    minlength: 4,
                    lettersonly: true 
                },
                lname: { required: true },
                mailid: {
                    required: true
                    , email: true
                },

                password: { required: true }

            },
            

        })
    })
</script>



